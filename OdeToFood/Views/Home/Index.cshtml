@model IEnumerable<OdeToFood.Models.Restaurant>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Restaurant reviews</h1>
    <p class="lead">Going to a new restaurant doesn't have to be a gamble. </p> 
    <p class="lead">Always make sure to check out the latest review here, at restaurant reviews.</p>
</div>

<div>
    <h2>Our best restaurants:</h2>
</div>
<div>
    @foreach (var restaurant in Model)
    {
        <table class = table>
            <tr><h3><b>
                @Html.DisplayFor(ModelItem => restaurant.Name)
            </b></h3></tr>
            <tr>
                @Html.DisplayFor(ModelItem => restaurant.City)
            </tr>
            <tr>
                @Html.DisplayFor(ModelItem => restaurant.Country)
            </tr>
            @Html.ActionLink("Reviews!", "RestaurantReviews", "Reviews", new { id=restaurant.Id}, null)

        </table>
    }
</div>
